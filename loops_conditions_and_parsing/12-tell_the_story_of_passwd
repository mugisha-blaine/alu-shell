#!/usr/bin/env bash
#Bash script that displays the content of the file /etc/passwd, using the while loop + IFS
while IFS=: read -r Username Password User ID GID GECOS Home_directory shell 
do
      echo "The user $username is part of the $GID gang, lives in $Home_directory and rides $shell. $User_ID's place is protected by the passcode $Password, more info about the user here: $GECOS"
done < /etc/passwd 
